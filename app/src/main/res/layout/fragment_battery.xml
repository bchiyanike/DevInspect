<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/fragment_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Battery Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_green"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BATTERY STATUS"
                android:textColor="@color/primaryGreenDark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/tvBatteryLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/primaryGreen"
                android:layout_gravity="center"
                android:padding="8dp"/>

            <ProgressBar
                android:id="@+id/pbBatteryLevel"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/battery_progress_green"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvBatteryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Charging Information Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_green"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHARGING INFORMATION"
                android:textColor="@color/primaryGreenDark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status:"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvChargingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discharging"
                    android:textColor="@color/primaryGreen"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time to Full:"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvChargeTimeRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculating..."
                    android:textColor="@color/textSecondary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Battery Details Card -->
        <LinearLayout
            android:id="@+id/llBatteryDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_green"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BATTERY DETAILS"
                android:textColor="@color/primaryGreenDark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <!-- Health -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Health:"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvBatteryHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good"
                    android:textColor="@color/primaryGreen"/>
            </LinearLayout>

            <!-- Temperature -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Temperature:"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvBatteryTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25.0°C / 77.0°F"
                    android:textColor="@color/textSecondary"/>
            </LinearLayout>

            <!-- Technology -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Technology:"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvBatteryTechnology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Li-ion"
                    android:textColor="@color/textSecondary"/>
            </LinearLayout>

            <!-- Voltage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Voltage:"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvBatteryVoltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.8V (3800 mV)"
                    android:textColor="@color/textSecondary"/>
            </LinearLayout>

            <!-- Capacity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Capacity:"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvBatteryCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="95%"
                    android:textColor="@color/textSecondary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Battery Statistics Card -->
        <LinearLayout
            android:id="@+id/llBatteryStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_green"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATISTICS"
                android:textColor="@color/primaryGreenDark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <!-- Estimated Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estimated Time:"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvEstimatedRemainingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5h 30m remaining"
                    android:textColor="@color/primaryGreen"/>
            </LinearLayout>

            <!-- Usage Today -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Usage Today:"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvBatteryUsageToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45%"
                    android:textColor="@color/textSecondary"/>
            </LinearLayout>

            <!-- Last Updated -->
            <TextView
                android:id="@+id/tvLastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last updated: 14:30:25"
                android:textSize="12sp"
                android:textColor="@color/textHint"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- Refresh Button -->
            <Button
                android:id="@+id/btnRefreshBattery"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="REFRESH"
                android:background="@drawable/rounded_button_green"
                android:textColor="@color/button_text"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_refresh"
                android:drawablePadding="4dp"/>

            <!-- Tips Button -->
            <Button
                android:id="@+id/btnBatteryOptimization"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="TIPS"
                android:background="@drawable/rounded_button_green"
                android:textColor="@color/button_text"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_lightbulb"
                android:drawablePadding="4dp"/>

            <!-- History Button -->
            <Button
                android:id="@+id/btnBatteryHistory"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="HISTORY"
                android:background="@drawable/rounded_button_green"
                android:textColor="@color/button_text"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_history"
                android:drawablePadding="4dp"/>
        </LinearLayout>

        <!-- Information Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information updates automatically every 30 seconds"
            android:textSize="12sp"
            android:textColor="@color/textHint"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/section_background"
            android:gravity="center"/>

    </LinearLayout>
</ScrollView>
